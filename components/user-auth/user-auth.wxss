/* 用户授权组件样式 */
.user-auth-card {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  padding: 40rpx;
}

.user-auth-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: white;
  border-radius: 24rpx;
  margin: 80rpx 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
}

.auth-header {
  position: relative;
  text-align: center;
  margin-bottom: 40rpx;
  z-index: 1;
}

.auth-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}

.auth-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  padding: 0 20rpx;
}

.auth-preview {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  z-index: 1;
}

.preview-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
  margin-bottom: 16rpx;
  border: 4rpx solid #f0f0f0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.preview-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.auth-actions {
  position: relative;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
  z-index: 1;
  padding: 0 40rpx;
}

.auth-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  position: relative;
  overflow: hidden;
}

.auth-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.auth-btn.secondary {
  background: #f8fafc;
  color: #64748b;
  border: 1rpx solid #e2e8f0;
}

.auth-btn-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}

.auth-btn:active {
  transform: scale(0.98);
}

.auth-privacy {
  position: relative;
  text-align: center;
  z-index: 1;
  padding: 0 40rpx;
}

.privacy-text {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
}

/* 动画效果 */
.user-auth-card {
  animation: authFadeIn 0.3s ease;
}

@keyframes authFadeIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}