/**map.wxss**/
page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

/* 地图容器 */
.map-container {
  position: relative;
  width: 100%;
  height: calc(100vh - 120rpx); /* 减去搜索框的高度 */
  background-color: #f0f0f0;
  overflow: hidden;
  margin-top: 120rpx; /* 为顶部搜索框留出空间 */
}

/* 地图滚动容器 */
.map-scroll-view {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

/* 地图缩放包装器 */
.map-wrapper {
  position: relative;
  transform-origin: 0 0;
}

/* 地图图片样式 */
.map-image {
  display: block;
  position: relative;
}

/* 树木标记点 */
.map-trees {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.map-tree {
  position: absolute;
  width: 4rpx;
  height: 4rpx;
  margin-left: -2rpx;
  margin-top: -2rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  pointer-events: auto;
  z-index: 10;
}

.map-tree.interactive {
  cursor: pointer;
  padding: 4rpx;
}

.tree-emoji {
  font-size: 4rpx;
}

.tree-tooltip {
  position: absolute;
  top: -60rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

/* 地图控制按钮 */
.map-controls {
  position: absolute;
  right: 20rpx;
  bottom: 120rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  z-index: 100;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
}

.control-icon {
  font-size: 36rpx;
  color: #333;
}

/* 区域选择按钮 */
.region-btn {
  position: absolute;
  left: 20rpx;
  bottom: 120rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #4CAF50;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.region-btn-icon {
  font-size: 40rpx;
  color: white;
}

/* 树木搜索 */
.map-search {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  display: flex;
  z-index: 100;
}

.map-search input {
  flex: 1;
  height: 80rpx;
  background-color: white;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.map-search button {
  width: 120rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #4CAF50;
  color: white;
  margin-left: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  padding: 0;
}

/* 区域选择遮罩层 */
.region-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 99;
}

/* 区域选择 */
.region-selection {
  position: absolute;
  left: 20rpx;
  bottom: 40rpx;
  width: 400rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  padding: 20rpx;
  z-index: 100;
}

.region-header {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  text-align: center;
}

.region-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.region-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  border-radius: 12rpx;
  background-color: #f0f7ff;
}

.region-emoji {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.region-name {
  font-size: 28rpx;
  font-weight: bold;
  flex: 1;
}

.region-count {
  font-size: 24rpx;
  color: #666;
}

.region-item.disabled {
  opacity: 0.5;
}

/* 树木详情弹窗 */
.tree-detail-modal {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.55);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  animation: modal-fade-in 160ms ease-out;
}

.modal-content {
  width: 86%;
  max-width: 640rpx;
  border-radius: 24rpx;
  overflow: hidden;
  position: relative;
  z-index: 1001;
  background: #ffffff;
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  box-shadow: 0 12rpx 44rpx rgba(0, 0, 0, 0.28);
  transform: scale(0.98);
  animation: modal-pop 180ms cubic-bezier(0.22, 1, 0.36, 1) forwards;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #2e7d32, #1b5e20);
  color: #ffffff;
}

.tree-title {
  font-size: 30rpx;
  font-weight: 700;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.region-chip {
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.18);
  color: #ffffff;
  border: 1rpx solid rgba(255, 255, 255, 0.45);
  font-size: 22rpx;
}

.close-x {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.25);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #ffffff;
}

.modal-body {
  padding: 24rpx;
}

.tree-emoji-large { display:none; }

.tree-info { margin-bottom: 8rpx; }

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx 24rpx;
}

.info-item { display: flex; }

.label {
  min-width: 140rpx;
  color: rgba(0,0,0,0.65);
  font-size: 24rpx;
}

.value {
  flex: 1;
  font-weight: 600;
  font-size: 26rpx;
  color: #0f5132;
}

.tree-actions {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  padding: 8rpx 24rpx 24rpx;
}

.action-btn {
  min-width: 200rpx;
  height: 76rpx;
  border-radius: 999rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.12);
}

.action-btn.primary {
  color: #fff;
  background: linear-gradient(135deg, #43a047, #2e7d32);
}

.action-btn.ghost {
  color: #2e7d32;
  background: rgba(46, 125, 50, 0.08);
}

@keyframes modal-fade-in {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes modal-pop {
  from { transform: scale(0.98); }
  to { transform: scale(1); }
}

/* 加载蒙层 */
.loading-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 2000;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

