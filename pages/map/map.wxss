/* 脉冲动画定义 */
@keyframes pulse {
  0% {
    box-shadow: 0 0 10rpx 5rpx rgba(255, 215, 0, 0.5);
  }
  50% {
    box-shadow: 0 0 30rpx 15rpx rgba(255, 215, 0, 0.9);
  }
  100% {
    box-shadow: 0 0 10rpx 5rpx rgba(255, 215, 0, 0.5);
  }
} 

/* 林区选择初始弹窗 */
.forest-selection-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.forest-modal-content {
  width: 600rpx;
  background-color: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

.forest-modal-header {
  padding: 30rpx 0;
  text-align: center;
  background-color: #f8f8f8;
  border-bottom: 1px solid #eee;
}

.forest-modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.forest-modal-body {
  padding: 40rpx 30rpx;
}

.forest-options {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.forest-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  border-radius: 16rpx;
  background-color: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s;
}

.forest-option:active {
  background-color: #e8f5e9;
  border-color: #4CAF50;
}

/* 校友林选择器样式（地图页弹窗内） */
.alumni-selector {
  margin-top: 8rpx;
  padding: 20rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
}

.picker-block { padding-bottom: 12rpx; border-bottom: 1rpx solid #eee; }
.picker-label { font-size: 26rpx; color: #333; margin-bottom: 8rpx; }
.picker-value { font-size: 26rpx; color: #2e7d32; font-weight: 600; }

.number-field { margin-top: 16rpx; }
.number-label { font-size: 26rpx; color: #333; margin-bottom: 8rpx; }
.number-input {
  width: 100%;
  height: 72rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e0e0e0;
  padding: 0 20rpx;
  background: #fafafa;
}
.actions { margin-top: 16rpx; display: flex; }
.confirm-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #43a047, #2e7d32);
  color: #fff;
  box-shadow: 0 6rpx 12rpx rgba(46,125,50,0.2);
}
.helper-text { margin-top: 10rpx; font-size: 22rpx; color: #777; }

.forest-modal-header { position: relative; }
.forest-modal-header .close-btn {
  position: absolute;
  right: 16rpx;
  top: 16rpx;
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: rgba(0,0,0,0.06);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
}

.forest-option.disabled {
  opacity: 0.6;
  background-color: #f0f0f0;
}

.forest-emoji {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.forest-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
}

.forest-desc {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.forest-tip {
  display: flex;
  align-items: center;
  background-color: #FFF8E1;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid #FFC107;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
} 