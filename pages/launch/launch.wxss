.launch-container {
  position: fixed;
  inset: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
}
.branding { display: flex; flex-direction: column; align-items: center; gap: 12rpx; }
.logo { width: 160rpx; height: 160rpx; border-radius: 24rpx; }
.title { margin-top: 12rpx; font-size: 36rpx; color: #111; font-weight: 600; }
.loading { margin-top: 48rpx; display: flex; flex-direction: column; gap: 16rpx; align-items: center; }
.tip { color: #666; font-size: 28rpx; }
.spinner {
  width: 64rpx; height: 64rpx; border: 6rpx solid #eaeaea; border-top-color: #07c160;
  border-radius: 50%; animation: spin 1s linear infinite;
}
@keyframes spin { from { transform: rotate(0deg);} to { transform: rotate(360deg);} }
.error { margin-top: 24rpx; display: flex; flex-direction: column; align-items: center; gap: 16rpx; }
.error-text { color: #e54d42; font-size: 26rpx; }
.actions { display: flex; gap: 16rpx; }
.btn { padding: 16rpx 28rpx; background: #07c160; color: #fff; border-radius: 999rpx; font-size: 28rpx; }
.btn.ghost { background: #f5f5f5; color: #333; }
